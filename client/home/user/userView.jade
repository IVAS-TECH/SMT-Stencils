div(layout="row" layout-align="center center" flex-offset="30" flex-offset-sm="0" layout-fill)
  div(ng-if="!userCtrl.authenticated" layout="row" layout-align="center center")
    md-button(ng-click="userCtrl.login($event)" aria-label="login" translate="button-login")
    md-button(ng-click="userCtrl.register($event)" aria-label="register" translate="button-register")
  div(ng-if="userCtrl.authenticated" layout="row" layout-align="center center")
    p {{userCtrl.user.email}}
    md-button(ng-click="userCtrl.logout()" class="md-raised md-warn" aria-label="logout" translate="button-logout")