form(name="configuration" layout="column" layout-wrap novalidate)
  div(layout="row" layout-xs="column" layout-fill flex="auto")
    md-input-container(flex="auto")
      label(translate="label-stencil-type")
      md-select(ng-model="scopeCtrl.configurationObject.stencil.type" ng-disabled="disabled" required)
        md-option(ng-value="'smd-stencil'" translate="option-smd-stencil")
        md-option(ng-value="'adhesive-stencil'" translate="option-adhesive-stencil")       
    md-input-container(flex="auto")
      label(translate="label-stencil-transitioning")
      md-select(
        ng-model="scopeCtrl.configurationObject.stencil.transitioning"
        ng-change="scopeCtrl.changeStencilTransitioning()"
        ng-disabled="disabled"
        required
      )
        md-option(ng-value="'rectangular'" translate="option-rectangular")
        md-option(ng-value="'glued-in-frame'" translate="option-glued-in-frame")
    md-input-container(ng-if="scopeCtrl.configurationObject.stencil.transitioning === 'glued-in-frame'" flex="auto")
      label(translate="label-stencil-frame-size")
      md-select(ng-model="scopeCtrl.configurationObject.stencil.size" ng-disabled="disabled" required)
        md-option 750 x 750
        md-option(ng-value="'custom'" translate="option-custom")
  div(layout="row" layout-xs="column" layout-fill flex="auto")
    md-input-container(flex="auto")
      label(translate="label-stencil-tickness")
      md-select(ng-model="scopeCtrl.configurationObject.stencil.tickness" ng-disabled="disabled" required)
        md-option(ng-repeat="o in [100, 120, 127, 150, 180, 200]") {{o + " Î¼m"}}  
    md-input-container(flex="auto")
      label(translate="label-stencil-height")
      input(ng-model="scopeCtrl.configurationObject.stencil.height" type="number" ng-change="scopeCtrl.changeDimenstions()" ng-disabled="disabled" required)
    md-input-container(flex="auto")
      label(translate="label-stencil-width")
      input(ng-model="scopeCtrl.configurationObject.stencil.width" type="number" ng-change="scopeCtrl.changeDimenstions()" ng-disabled="disabled" required)
  div(layout="row" layout-xs="column" layout-fill flex="auto")
    md-input-container(flex="auto")
      label(translate="label-fudical-marks")
      md-select(ng-model="scopeCtrl.configurationObject.fudical.marks" ng-disabled="disabled" required)
        md-option(ng-value="'engraved'" translate="option-engraved")
        md-option(ng-value="'cut-through'" translate="option-cut-through")
        md-option(ng-value="'black-filling'" translate="option-black-filling")
    md-input-container(flex="auto")
      label(translate="label-fudical-marks-side")
      md-select(ng-model="scopeCtrl.configurationObject.fudical.side" ng-disabled="disabled" required)
        md-option(ng-repeat="o in scopeCtrl.options.side" ng-value="o" translate="{{'option-' + o}}")
    md-input-container(flex="auto")
      label(translate="label-fudical-marks-number")
      input(ng-model="scopeCtrl.configurationObject.fudical.number" type="number" ng-disabled="disabled" required)
  div(layout="row" layout-xs="column" layout-fill flex="auto")
    md-input-container(flex="auto")
      label(translate="label-text-position")
      md-select(
        ng-model="scopeCtrl.configurationObject.text.position"
        ng-change="scopeCtrl.options.textAngle = scopeCtrl.textAngle(scopeCtrl.configurationObject.text.position)"
        ng-disabled="disabled"
        required
      )
        md-option(ng-repeat="o in scopeCtrl.options.textPosition" ng-value="o" translate="{{'option-' + o}}")
    md-input-container(flex="auto")
      label(translate="label-text-readable-from")
      md-select(ng-model="scopeCtrl.configurationObject.text.angle" ng-change="scopeCtrl.changeText()" ng-disabled="disabled" required)
        md-option(ng-repeat="o in scopeCtrl.options.textAngle" ng-value="o" translate="{{'option-' + o}}")
    md-input-container(flex="auto")
      label(translate="label-text-type")
      md-select(ng-model="scopeCtrl.configurationObject.text.type" ng-change="scopeCtrl.changeText()" ng-disabled="disabled" required)
        md-option(ng-value="'engraved'" translate="option-engraved")
        md-option(ng-value="'drilled'" translate="option-drilled")
    md-input-container(ng-if="scopeCtrl.configurationObject.text.type === 'engraved'" flex="auto")
      label(translate="label-text-side")
      md-select(ng-model="scopeCtrl.configurationObject.text.side" ng-change="scopeCtrl.changeText()" ng-disabled="disabled" required)
        md-option(ng-repeat="o in scopeCtrl.options.side" ng-value="o" translate="{{'option-' + o}}")
  div(layout="row" layout-xs="column" layout-fill flex="auto")
    md-input-container(flex="auto")
      label(translate="label-position-aligment")
      md-select(
        ng-model="scopeCtrl.configurationObject.position.aligment"
        ng-change="scopeCtrl.changeStencilPosition()"
        ng-disabled="disabled"
        required
      )
        md-option(ng-value="'portrait'" translate="option-portrait")
        md-option(ng-value="'landscape'" translate="option-landscape")  
    md-input-container(flex="auto")
      label(translate="label-position-position")
      md-select(
        ng-model="scopeCtrl.configurationObject.position.position"
        ng-change="scopeCtrl.changeStencilPosition()"
        ng-disabled="disabled"
        required
      )
        md-option(ng-value="'layout-centered'" translate="option-layout-centered")
        md-option(ng-value="'pcb-centered'" translate="option-pcb-centered")
        md-option(ng-value="'like-layout-file'" translate="option-like-layout-file")
    md-input-container(flex="auto")
      label(translate="label-position-side")
      md-select(ng-model="scopeCtrl.configurationObject.position.side" ng-disabled="disabled" required)
        md-option(ng-repeat="o in scopeCtrl.options.side" ng-value="o" translate="{{'option-' + o}}") 
