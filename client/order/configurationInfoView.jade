div(layout="column" layout-align="center center" layout-fill layout-margin layout-padding)
  form(name="configuration" layout="column" layout-align="center center" layout-fill novalidate)
    div(layout="row" layout-sm="column" layout-align="center center" layout-fill)
      md-input-container(flex="auto")
        label(translate="label-stencil-type")
        md-select(ng-model="x.stencil.stencil.type" required)
          md-option(ng-value="'smd-stencil'" translate="option-smd-stencil")
          md-option(ng-value="'adhesive-stencil'" translate="option-adhesive-stencil")
      md-input-container(flex="auto")
        label(translate="label-stencil-tickness")
        md-select(ng-model="x.stencil.stencil.tickness" required)
          md-option(ng-repeat="o in [100, 120, 127, 150, 180, 200]") {{o + " Î¼m"}}         
      md-input-container(flex="auto")
        label(translate="label-stencil-transitioning")
        md-select(ng-model="x.stencil.stencil.transitioning" ng-change="x.changeStencilTransitioning()" required)
          md-option(ng-value="'rectangular'" translate="option-rectangular")
          md-option(ng-value="'glued-in-frame'" translate="option-glued-in-frame")
      md-input-container(ng-if="x.stencil.stencil.transitioning === 'glued-in-frame'" flex="auto")
        label(translate="label-stencil-frame-size")
        md-select(ng-model="x.stencil.stencil.size" required)
          md-option 750 x 750
          md-option(ng-value="'custom'" translate="option-custom")
    div(layout="row" layout-sm="column" layout-align="center center" layout-fill)
      md-input-container(flex="auto")
        label(translate="label-fudical-marks")
        md-select(ng-model="x.stencil.fudical.marks" required)
          md-option(ng-value="'engraved'" translate="option-engraved")
          md-option(ng-value="'cut-through'" translate="option-cut-through")
          md-option(ng-value="'black-filling'" translate="option-black-filling")
      md-input-container(flex="auto")
        label(translate="label-fudical-marks-side")
        md-select(ng-model="x.stencil.fudical.side" required)
          md-option(ng-repeat="o in x.options.side" ng-value="o" translate="{{'option-' + o}}")
    div(layout="row" layout-sm="column" layout-align="center center" layout-fill)
      md-input-container(flex="auto")
        label(translate="label-text-position")
        md-select(ng-model="x.stencil.text.position" ng-change="x.options.textAngle = x.textAngle(x.stencil.text.position)" required)
          md-option(ng-repeat="o in x.options.textPosition" ng-value="o" translate="{{'option-' + o}}")
      md-input-container(flex="auto")
        label(translate="label-text-readble-from")
        md-select(ng-model="x.stencil.text.angle" required)
          md-option(ng-repeat="o in x.options.textAngle" ng-value="o" translate="{{'option-' + o}}")
      md-input-container(flex="auto")
        label(translate="label-text-type")
        md-select(ng-model="x.stencil.text.type" required)
          md-option(ng-value="'engraved'" translate="option-engraved")
          md-option(ng-value="'drilled'" translate="option-drilled")
      md-input-container(ng-if="x.stencil.text.type === 'engraved'" flex="auto")
        label(translate="label-text-side")
        md-select(ng-model="x.stencil.text.side" required)
          md-option(ng-repeat="o in x.options.side" ng-value="o" translate="{{'option-' + o}}")
    div(layout="row" layout-sm="column" layout-align="center center" layout-fill)
      md-input-container(flex="auto")
        label(translate="label-position-aligment")
        md-select(ng-model="x.stencil.position.aligment" ng-change="x.changeStencilPosition()" required)
          md-option(ng-value="'portrait'" translate="option-portrait")
          md-option(ng-value="'landscape'" translate="option-landscape")  
      md-input-container(flex="auto")
        label(translate="label-position-position")
        md-select(ng-model="x.stencil.position.position"  ng-change="x.changeStencilPosition()" required)
          md-option(ng-value="'layout-centered'" translate="option-layout-centered")
          md-option(ng-value="'pcb-centered'" translate="option-pcb-centered")
          md-option(ng-value="'like-layout-file'" translate="option-like-layout-file")
      md-input-container(flex="auto")
        label(translate="label-stencil-position-side")
        md-select(ng-model="x.stencil.position.side" required)
          md-option(ng-repeat="o in x.options.side" ng-value="o" translate="{{'option-' + o}}")
    div(layout="row" layout-align="center center" layout-fill)
      md-input-container(flex="auto")
        label(translate="label-configuration-name")
        input(ng-model="x.stencil.name" required)
  md-button(ng-click="x.configurationAction($event, configuration.$invalid)" class="md-primary" aria-label="x.mode") action
      
