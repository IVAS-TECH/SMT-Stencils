div(layout="column" layout-align="center center" layout-fill)
  md-button(ng-click="configCtrl.reset()" class="md-primary" aria-label="new" translate="button-new-onfiguration")
  div(layout="row" layout-align="center center")
    md-input-container(flex="auto")
      label(translate="choose-configuration")
      md-select(ng-model="configCtrl.config" ng-change="configCtrl.choose()")
        md-option(ng-repeat="c in configCtrl.configs" ng-value="$index") {{c.name}}
    div(ng-if="configCtrl.settings" layout="row" layout-align="center center")
      md-button(ng-click="configCtrl.edit()" class="md-primary" translate="button-edit")
      md-button(ng-click="configCtrl.delete($event)" class="md-warn" translate="button-delete")
  div(ng-if="configCtrl.configuration" layout="column" layout-align="center center" layout-fill)
    ivo-stencil-preview(text="configCtrl.text" view="configCtrl.view" controller="configCtrl.controller")
    ivo-include(include="'configurationInfoView'" template="true" controller="configCtrl.controller")
